<h1>投稿詳細</h1>
<%= link_to @post.user.name, @post.user %>
<%= @post.impression %>

<% if !Like.exists?(post_id: @post.id, user_id: current_user.id) %>
  <%= link_to post_likes_path(@post), method: :post, remote: true, class:"like-btn" do %>
    <span class="fa fa-heart-o" aria-hidden="true"></span>
  <% end %>
  <%= @post.likes.count %>
<% else %>
  <%= link_to post_like_path(@post), method: :delete, remote: true, class:"like-btn" do %>
    <span class="fa fa-heart" aria-hidden="true"></span>
  <% end %>
  <%= @post.likes.count %>
<% end %>

<% if current_user?(@post.user) %>
  <%= link_to "delete", post_path(@post.id), method: :delete, data: { confirm: "You sure?" } %>
<% end %>
