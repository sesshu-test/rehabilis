<h1>ユーザ一覧</h1>

<%= @text %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <% if user.avatar.attached? %>
        <%= image_tag user.avatar.variant(resize_to_limit: [50, 50]) %>
      <% else %>
        <%= image_tag "default-avatar.png", size: '50' %>
      <% end %>
      <%= link_to user.name, user %>
    </li>
  <% end %>
</ul>

<%= paginate @users %>